@model IEnumerable<Project_sem_3.Models.InsurancePackage>

@{
    ViewBag.Title = "Information";
}
<style>
    .thumb {
        width: 1300px;
        height: 300px;
        background-color: #3e3e3e;
        background-image: none;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
    }

    .subslide {
        max-width: fit-content;
        position: relative;
        margin: auto;
    }

    .shadow {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }

    .tab-pro {
        font-size: large;
        padding: 0;
        text-align: center;
        background-color: #f0f0f0;
        border-radius: 5px;
    }

    ul {
        list-style-type: none;
    }

    .tab-pro li {
        display: inline-block;
    }

        .tab-pro li.active a {
            background-color: #0b665a;
            color: #fff;
        }

        .tab-pro li a {
            display: inline-block;
            padding: 15px;
            font-family: "HelB";
        }

            .tab-pro li a:hover {
                background-color: #0b665a;
                color: #fff;
            }

    a {
        text-decoration: none;
        transition: all 0.15s ease-in-out;
    }

    .main-content {
        padding-top: 20px;
    }

    .box-border-pro {
        position: relative;
        background: #fff;
        border: 1px solid #e4e4e4;
        padding: 25px;
    }

    .mes-frm {
        font-family: serif;
        margin-bottom: 30px;
        font-size: large;
        font-weight: bold;
    }

    .frmpro {
        width: 100%;
        color: #3e3e3e;
    }

    .frm {
        width: 100%;
        margin: auto;
    }

    .frmpro .col-form-label {
        line-height: 2.7em;
        font-size: 14px;
        color: #3e3e3e;
    }

    .col-form-label-first {
        text-align: right;
    }

    .frmpro .txt {
        padding: .375rem .75rem;
    }

    .frm .txt {
        padding: 14px;
        border: solid 2px #c8c8c8;
    }

    .my-1 {
        margin-bottom: .25rem !important;
    }

    .custom-select {
        display: inline-block;
        width: 100%;
        font-weight: 400;
        line-height: 1.5;
        color: #495057;
        vertical-align: middle;
        background: url(https://previews.123rf.com/images/tifani1/tifani11801/tifani1180100316/94060669-set-icon-arrow-up-and-down-.jpg) no-repeat right .75rem center/62px 47px;
        background-color: #fff;
        border-radius: .25rem;
        -webkit-appearance: none;
        font-size: 14px;
    }

    .frmpro i {
        font-size: 12px;
        line-height: normal !important;
    }

    .pad-top-5 {
        display: block;
        padding-top: 5px;
    }

    .btn-pro {
        background-color: #ea212d;
        padding: 12px;
        padding-left: 0;
        padding-right: 0;
        border: none;
        border-radius: 5px;
        color: #fff;
        font-weight: 700;
        width: 100%;
        transition: all 0.15s ease-in-out;
    }

        .btn-pro:hover {
            background-color: #0b665a;
            color: #fff;
        }

    .hvr-forward {
        vertical-align: middle;
        transform: perspective(1px) translateZ(0);
        box-shadow: 0 0 1px rgba(0, 0, 0, 0);
        transition-duration: 0.3s;
        transition-property: transform;
    }

    .box-chuy {
        margin-top: 20px;
    }

        .box-chuy .title-box-chuy {
            font-size: 16px;
            font-family: serif;
            text-transform: uppercase;
            padding-bottom: 5px;
            margin-bottom: 20px;
            background-color: #f5f5f5;
            padding: 10px;
            font-weight: bold;
        }

    .icon-bell {
        background: url(https://www.iconsdb.com/icons/preview/red/bell-3-xxl.png) no-repeat left .75rem center/15px 15px;
        padding: 0px 0px 0px 30px;
    }

    .cotent-box-chuy {
        font-size: 14px;
        line-height: 22px;
        padding-left: 10px;
    }

        .cotent-box-chuy > div {
            margin-bottom: 7px;
        }

    .cotent-text {
        background: url(https://baohiemtructuyen.com.vn/images/sub_menu_bullet.png) no-repeat 0 11px;
        padding: 7px 0 5px 15px;
    }

    #menuaccordion {
        margin-bottom: 15px;
    }

    .sub-menuleft {
        background-color: #0b665a;
        padding: 12px 10px;
        font-family: serif;
        font-size: 17px;
        color: #fff;
        position: relative;
        border-bottom: solid 1px #fff;
    }

        .sub-menuleft a {
            color: #fff;
            background-image: url(https://baohiemtructuyen.com.vn/images/icon/arr_acc_act.png);
            background-repeat: no-repeat;
            background-position: right center;
            display: block;
            width: 100%;
        }

    .menu-left {
        padding: 0;
        margin: 0;
        border: solid 1px #d7d7d7;
        border-top: none;
    }

        .menu-left li {
            display: block;
            position: relative;
        }

            .menu-left li a.menuleft-act {
                font-weight: 700;
                color: #ea212d;
                background-color: #f5f5f5;
            }

        .menu-left > li > a {
            background-image: url(https://baohiemtructuyen.com.vn/images/ar1.jpg);
            background-repeat: no-repeat;
            background-position: 10px 16px;
        }

        .menu-left li a:hover {
            background-color: #f5f5f5;
            color: #ea212d;
        }

        .menu-left li a {
            padding: 10px 15px;
            display: block;
            border-bottom: dotted 1px #d7d7d7;
            font-size: 16px;
            font-family: unset;
            padding-left: 20px;
        }

    .c45 {
        height: 45px;
    }
</style>
<section>
    <div class="subslide shadow">
        <div class="thumb" style="        background-image: url(https://cdn.vietnambiz.vn/2019/9/4/jan-31-is-next-deadline-to-enroll-for-obamacare787x524-15675953121511744257074.jpg)"></div>
    </div>
</section>
<div class="container">
    <ul class="tab-pro">
        <li class="nav-item active"><a href="https://localhost:44362/MedicalInsurance/Information">Information</a></li>
        <li class="nav-item "><a href="#">Order</a></li>
        <li class="nav-item "><a href="#">Log in</a></li>
        <li class="nav-item "><a href="#">Delivery & payment</a></li>
    </ul>
</div>
<section class="main-content">
    <div class="container">
        <div class="row">

            <div class="col-lg-9 col-md-8 col-sm-12">
                <div class="box-border-pro">
                    <div class="mes-frm">Please enter all the information in the form below</div>
                    <form class="frm frmpro" action="/MedicalInsurance/Order" method="post">
                            <div class="form-group">
                                <div class="row">
                                    <label for="ddlOption" class="col-lg-4 col-sm-12 col-form-label col-form-label-first">Choice of insurance package:</label>
                                    <div class="col-lg-5">
                                        <select name="price" id="ctl18_ddlOption" class="custom-select my-1 mr-sm-2 txt" onchange="disableControl();">
                                            <option value="0">chon goi</option>
                                            @foreach (var item in Model)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                                <option value="@item.Price" type="hidden"/>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label for="ddlAmountPersons" class="col-lg-4 col-sm-12 col-form-label col-form-label-first">Number of insured:</label>
                                    <div class="col-lg-5">
                                        <select name="number" id="ctl18_ddlAmountPersons" class="custom-select my-1 mr-sm-2 txt">
                                            <option value="0">-- Choose a number of person --</option>
                                            <option value="1">1 person </option>
                                            <option value="2">2 person </option>
                                            <option value="3">3 person </option>
                                            <option value="4">4 person </option>
                                            <option value="5">5 person </option>
                                            <option value="6">6 person </option>
                                            <option value="7">7 person </option>
                                            <option value="8">8 person </option>
                                            <option value="9">9 person </option>
                                            <option value="10">10 person </option>

                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label for="txtsongaydulich" class="col-lg-4 col-sm-12 col-form-label col-form-label-first"></label>
                                    <div class="col-lg-5">
                                        <i class="pad-top-5">
                                            (Children 1-6 years old must be accompanied by a parent. The child's insurance program only applies to the same or lower level than the parent's program)
                                        </i>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label for="btnContinue" class="col-lg-4 col-sm-12 col-form-label col-form-label-first"></label>
                                    <div class="col-lg-5">
                                          <input type="submit" name="ctl18$btnContinue" value="Tiếp tục" id="ctl18_btnContinue" class="btn-pro hvr-forward" />
                                    </div>
                                </div>
                            </div>

                    </form>

                    <div class="box-chuy">

                        <div class="title-box-chuy"><i class="icon-bell" aria-hidden="true"></i> NOTE IF YOU BUY THE FIRST TIME:</div>
                        <div class="cotent-box-chuy">
                            <div><i class="cotent-text"></i> Waiting time for regular medical examination (including dental examination) is 30 days</div>

                            <div><i class="cotent-text"></i> Waiting time for chronic disease, available disease is 06 months or 01 year depending on each disease group, details of insurance rules.</div>
                            <div><i class="cotent-text"></i> Waiting time for issues related to maternity: Birth or caesarean is 01 year; Maternity complications 280 days; Ectopic pregnancy 90 days</div>
                            <div><i><strong>(Waiting time:</strong> At the time of your request for insurance payment, BIC will check if your insurance policy has purchased enough waiting times, if not enough, BIC will notify to refuse insurance)</i></div>
                        </div>

                    </div>

                    <div class="box-chuy">
                        <div class="title-box-chuy"><i class="icon-bell" aria-hidden="true"></i> TUTORIAL: </div>
                        <div class="cotent-box-chuy">
                            <div><i class="cotent-text"></i> Select the number of people you are planning to buy Comprehensive Health Insurance (BIC HealthCare), Click the [Continue] button to move to the details and billing steps. </div>

                            <div><i class="cotent-text"></i> If you want to buy comprehensive health insurance (BIC HealthCare) for more than 10 people, please contact us directly for advice for a more preferential fee. </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-lg-3 col-md-4 col-sm-12 col-right">
                <div class="accordion" id="menuaccordion">
                    <div class="subdetail">
                        <div id="ctl19_menu_right"><div class='sub-menuleft' id='menu-145'><a class='' href='' data-toggle='collapse' data-target='#submenu-145' aria-expanded='true' aria-controls='collapseOne'><span>Comprehensive health insurance (BIC HealthCare)</span></a></div><div id='submenu-145' class='collapsed' aria-labelledby='menu-145' data-parent='#menuaccordion'><ul class='menu-left'><li><a href='bao-hiem-suc-khoe' alt='' class='menuleft-act'>General information</a></li><li><a href='bao-hiem-suc-khoe-bang-quyen-loi-bao-hiem' alt=''> Insurance benefits</a></li><li><a href='bao-hiem-suc-khoe-bieu-phi-bao-hiem' alt=''>Premium tariff</a></li><li><a href='bao-hiem-suc-khoe-huong-dan-boi-thuong' alt=''> Compensation guide</a></li><li><a href='bao-hiem-suc-khoe-danh-sach-benh-vien-lien-ket' alt=''> List of affiliated health facilities that guarantee hospital fees</a></li><li><a href='bao-hiem-suc-khoe-download' alt=''> Download rules and forms</a></li><li><a href='https://localhost:44380/HealthInsurance/Information' alt=''> Charge & order</a></li></ul></div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="c45"></div>
</section>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#ctl18_btnContinue').click(function () {
                var insurancePackageId= $("select#ctl18_ddlOption").val();
                var numberPeople = $("select#ctl18_ddlAmountPersons").val();
                if (insurancePackageId == 0) {
                    alert("chưa chọn gói")
                    return
                }
                if (numberPeople == 0) {
                    alert("chưa chọn số người")
                    return
                }
            })
        })
    </script>
    }


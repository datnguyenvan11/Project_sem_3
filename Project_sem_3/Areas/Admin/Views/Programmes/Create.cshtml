@model Project_sem_3.Models.Programme

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="/Areas/Admin/Assets/css/custom.css" rel="stylesheet" />

<div class="container">
    <form action="/Admin/Programmes" method="post">
        <div class="col-lg-9 col-md-8 col-sm-12">
            <div class="box-border-pro">
                <div class="frm frmpro">
                    <div class="form-group">
                        <h4>Enter the information programme</h4>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-4 col-sm-12 col-form-label col-form-label-first">Name Programme:</label>
                            <div class="col-lg-8">
                                <input  type="text" id="ctl18_fullname" class="form-control txt" placeholder="Name programme" />
                                <i class="pad-top-5">
                                    <span id="ctl18_lblInsuredReq" class="req" style="color:Red;"></span>
                                </i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-lg-4 col-sm-12 col-form-label col-form-label-first">Price :</label>
                            <div class="col-lg-8">
                                <input  type="number" id="ctl18_txtAddress" class="form-control txt" placeholder="Price"></input>
                                <i class="pad-top-5">
                                    <span id="ctl18_lblAddressReq" class="req" style="color:Red;"></span>
                                </i>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
